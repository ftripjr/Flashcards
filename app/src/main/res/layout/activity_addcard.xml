<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackdrop">

    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_question"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:id="@+id/etAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etQuestion"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:hint="@string/ans_hint" />

    <EditText
        android:id="@+id/etWrong1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAnswer"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:hint="@string/wrong_hint" />

    <EditText
        android:id="@+id/etWrong2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etWrong1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:hint="@string/wrong_hint" />

    <ImageView
        android:id="@+id/ivSaveCard"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/etWrong2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_icon_save" />

    <ImageView
        android:id="@+id/ivCancelCard"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/etWrong2"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/ic_icon_cancel" />

</RelativeLayout>